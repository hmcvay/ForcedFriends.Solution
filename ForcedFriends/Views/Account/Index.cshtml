@{
  Layout = "_Layout";
}

@model ApplicationUser
@using System.Security.Claims


<h2>Authentication with Identity</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <p>Hello @Html.DisplayFor(m => m.Name)!</p>

    <p>Username: @User.Identity.Name</p> 
    <p>Bio: @Html.DisplayFor(m => m.Bio)</p> 
    <p>Birthday: @Html.DisplayFor(m=>m.Birthday)</p> 

    <p>@Html.ActionLink("Edit", "Edit")</p>


    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-default" value="Log out" />
    }
}
else
{
    <p>@Html.ActionLink("Register", "Register")</p>
    <p>@Html.ActionLink("Log in", "Login")</p>
}
<p>@Html.ActionLink("Home", "Index", "Home")</p>

