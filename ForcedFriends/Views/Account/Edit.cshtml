@{
  Layout = "_Layout";
}
@model ApplicationUser
@using System.Security.Claims

@if (User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name, finish filling out your profile!</p>
  @using (Html.BeginForm())
  {
    
    @Html.HiddenFor(model => model.Id)

    @Html.LabelFor(m => m.Name)
    @Html.EditorFor(m => m.Name, new {@class= "form-control", type="text", placeholder = "Name", required = "required"})

    @Html.LabelFor(m => m.Birthday)
    @Html.TextBoxFor(m => m.Birthday, new {@class= "form-control", type="date", placeholder = "Birthday", required = "required"})

    @Html.LabelFor(m => m.Bio)
    @Html.EditorFor(m => m.Bio, new {@class= "form-control", placeholder = "Bio", required = "required"})

    <input type="submit" value ="Save">
  }
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>