@{
  Layout = "_Layout";
}

@using ForcedFriends.ViewModels

@model RegisterViewModel

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  <div class="content-container">
    <div class="form-group">
      @Html.TextBoxFor(user=> user.UserName, new {@class= "form-control", placeholder = "Username", required = "required"})
    </div>
    <div class="form-group">
      @Html.TextBoxFor(user=> user.Email, new {@class= "form-control", type="email", placeholder = "Email", required = "required"})
    </div>
    <div class="form-group">
      @Html.PasswordFor(user=> user.Password, new {@class= "form-control", placeholder = "Password", required = "required"})
    </div>
    <div class="form-group">
      @Html.PasswordFor(user=> user.ConfirmPassword, new {@class= "form-control", placeholder = "Confirm Password", required = "required"})
    </div>
    <div class="form-group">
      <input type="submit" value="Register" class="btn btn-primary"/>
    </div>
  </div>
}