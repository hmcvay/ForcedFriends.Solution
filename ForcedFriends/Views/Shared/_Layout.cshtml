<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]ReelFriends</title>
    <link rel="icon" href="~/img/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Paytone+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img id="navlogo" src="~/img/navBarLogo.png" alt="logo"> </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Movies" asp-action="Index">MovieList</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" asp-area="" asp-controller="Movies" asp-action="GetWatchList">WatchList</a>
                    </li>  
                    <li class="nav-item">
                         <a class="nav-link" asp-area="" asp-controller="Account" asp-action="ViewMatches">Match List</a>
                    </li>                      
                </ul>      
                <ul class="navbar-nav flex-grow">
                    <li class="navbar-item">
                      @if (User.Identity.IsAuthenticated)
                        {
                          <a class="nav-item nav-link" href="/Account">@User.Identity.Name's Account</a>
                        }
                        else
                        {
                          <a class="nav-item nav-link" href="/Account">Account</a>
                        }
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    @* <div class="container"> *@
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    @* </div> *@

    @* <footer class="footer text-muted">
        <div class="container">
            &copy; 2022 - ForcedFriends 
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
