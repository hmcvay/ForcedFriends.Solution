@{
  Layout = "_Layout";
}

@model ForcedFriends.Models.Movie;
<div class="page">
    <h3> @Html.DisplayFor(m=>m.Title)</h3>

    <h3>@Html.DisplayFor(m=>m.Tagline)</h3>

    <h3> @Html.DisplayFor(m=>m.Release_Date)</h3>

    <img class="poster" src="https://image.tmdb.org/t/p/w1280/@Html.DisplayFor(m => m.Poster_Path)">

    <h5>@Html.DisplayFor(m=>m.Overview)</h5>


    @using (Html.BeginForm("AddMovie", "Movies"))
    {
      @Html.HiddenFor(model => model.Id)
      <input type="submit" value="Add movie" class="btn btn-primary"/>
    }
</div>
